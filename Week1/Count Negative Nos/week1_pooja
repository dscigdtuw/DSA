class Solution {
public:
    int countNegatives(vector<vector<int>>& grid) {
     
        int n = grid.size();  // row
        int m = grid[0].size(); // col
        
        int i = 0, j = m - 1;
        int count = 0;
    
        while(i >= 0 && i < n && j >= 0 && j < m )
        {
            if(grid[i][j] < 0)
            {
                count += n - i;
                j--;
            }
            else
                i++;
        }
        return count;
    }
};
